<!--div class="container" style="width:27%; background: #ddd; padding:5px; margin-bottom:5px;" -->
<div class="col-lg-4 col-md-6 col-sm-12 text-center position" style="position: relative; left:38%; width:20%; background-color: #ddd; padding:5px; margin:5px;">

  <form id="createAccountIdId" action="/createaccount" method="POST">
	<h3 style="color: #0000AA;" class="text-center">S'inscrire sur SHAA'M Beauty</h3><br>
    <div class="form-group">
      <label for="username">Pseudo (ou nom d'utilisation) de 4 à 30 caractères en commençant par une lettre:</label>
      <input type="text" class="form-control" id="username" name="username" pattern="^[a-zA-Z][a-zA-Z0-9]{3,29}$" placeholder="Entrez votre d'utilisatrice / d'utilisateur" required>
    </div>
    <div class="form-group">
      <label for="userphone">Numéro de téléphone valide (format sans espace):</label>
      <!--input type="text" class="form-control" id="userphone" name="userphone" pattern="^(\+|00){,1}[1-9][0-9 \-\(\)\.]{7,32}$" placeholder="Entrez votre numéro de téléphone" required -->
      <!--input type="text" class="form-control" id="userphone" name="userphone" pattern="^((\+|00)[0-9]{2,3}[ ._]*[0-9]{1,2})*[ .-]*([0-9]{2}[ .-]*){4,5}$" placeholder="Entrez votre numéro de téléphone" required -->
      <input type="text" class="form-control" id="phonenumber" name="phonenumber" pattern="^((\+|00)[0-9]{2,3}[0-9]{1,2})*([0-9]{2}){4,5}$" placeholder="Entrez votre numéro de téléphone" required>
    </div>
    <div class="form-group">
      <label for="pwd">Mot de passe (4 caractères au moins):</label>
      <input type="password" class="form-control" id="pwd"  name="pwd" placeholder="Entrez un mot de pase" required>
    </div>
    <div class="form-group">
      <label for="pwdConf">Mot de passe à nouveau:</label>
      <input type="password" class="form-control" id="pwdConf"  name="pwdconf" placeholder="Confirmer le mot de passe précédent" required>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" name="remember"> Se souvenir de moi</label>
    </div>
	<input type="submit" value="J'enregistre" class="btn btn-info mt-3">
	<input id="resetForm" type="reset" class="btn btn-warning mt-3" style="color: black;"  value="Tout effacer">
  </form>
</div>
